{
  "wizard": {
    "default_modality": "RU_PROGRAMA",
    "questions": [
      {
        "id": "Q1",
        "text": "Ruta principal del procedimiento (Ley 29415)",
        "type": "select",
        "options": [
          {
            "value": "programa",
            "label": "Programa/Proyecto de Renovación Urbana"
          },
          {
            "value": "abandono",
            "label": "Declaración administrativa de abandono"
          },
          {
            "value": "prescripcion",
            "label": "Prescripción adquisitiva administrativa"
          }
        ],
        "help": "Configurable en data/rules.sample.json. Ajusta preguntas y reglas según tu ley."
      },
      {
        "id": "Q2",
        "text": "¿El predio está calificado como tugurizado?",
        "type": "boolean"
      },
      {
        "id": "Q3",
        "text": "¿Ocupantes empadronados y calificados como poseedores?",
        "type": "boolean"
      },
      {
        "id": "Q4",
        "text": "¿Existe propietario registral identificado?",
        "type": "boolean"
      },
      {
        "id": "Q5",
        "text": "¿Se cuenta con peritaje/informe técnico (o se solicitará)?",
        "type": "boolean"
      },
      {
        "id": "Q6",
        "text": "Área aproximada del predio (m²)",
        "type": "number",
        "min": 0,
        "max": 200000,
        "placeholder": "Ej. 350"
      },
      {
        "id": "Q7",
        "text": "¿Se requiere compensación al propietario?",
        "type": "boolean"
      },
      {
        "id": "Q8",
        "text": "¿Existe controversia que podría requerir arbitraje?",
        "type": "boolean"
      }
    ],
    "decisions": [
      {
        "when": [
          {
            "q": "Q1",
            "op": "eq",
            "v": "abandono"
          },
          {
            "q": "Q5",
            "op": "truthy",
            "v": true
          }
        ],
        "result_modality": "RU_ABANDONO"
      },
      {
        "when": [
          {
            "q": "Q1",
            "op": "eq",
            "v": "prescripcion"
          },
          {
            "q": "Q3",
            "op": "truthy",
            "v": true
          }
        ],
        "result_modality": "RU_PRESCRIPCION"
      },
      {
        "when": [
          {
            "q": "Q1",
            "op": "eq",
            "v": "programa"
          },
          {
            "q": "Q2",
            "op": "truthy",
            "v": true
          }
        ],
        "result_modality": "RU_PROGRAMA"
      },
      {
        "when": [
          {
            "q": "Q1",
            "op": "eq",
            "v": "programa"
          },
          {
            "q": "Q2",
            "op": "falsy",
            "v": false
          }
        ],
        "result_modality": "RU_PRECALIFICACION"
      }
    ]
  },
  "modalities": {
